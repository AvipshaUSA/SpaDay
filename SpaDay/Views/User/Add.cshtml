}

@using SpaDay.ViewModel;

@model AddUserViewModel;
<h1>Sign Up Form</h1>

@*@if (@Model != null)
{
    <p>@Model</p>
}*@


<form method="post" action="/user">



    @if (ViewBag.error == null)
    {
        //<input type="text" name="username" />
        <div asp-controller="user" asp-action="Add" class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>


    }
    else
    {
        // <input type="text" name="username" value="@ViewBag.userName" />

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" value="@Model.Username"/>
            <span asp-validation-for="Username"></span>
        </div>


    }

    @if (ViewBag.error == null)
    {
        //<input type="email" name="email" />
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    }
    else
    {
        // <input type="email" name="email" value="@ViewBag.eMail" />
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" value="@Model.Email"/>
            <span asp-validation-for="Email"></span>
        </div>
    }
 
    

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password"/>
        <span asp-validation-for="Password"></span>
    </div>
    

    <div class="form-group">
        <label asp-for="VarifyPassword"></label>
        <input asp-for="VarifyPassword" type="password" />
        <span asp-validation-for="VarifyPassword"></span>
    </div>


    <input type='submit' value='Submit'>
   
</form>
